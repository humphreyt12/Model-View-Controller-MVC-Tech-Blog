<!-- Loop over each object in the blog array -->
{{#each blogs as |blog| }}
<div class="row"> 
<div class="container blogBox">
  <div class="row justify-content-center headerRow">
  <div class="col-8">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a class="blogTitle text-uppercase" href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
</div>
<div class="col-4"> 
    <!-- Pass needed_funding value to the helper function -->
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  </div>
  <div class="blogDesc">
    <p class="text-center blogDescMain">
      {{blog.description}}
    </p>
  </div>
  </div>

</div>
{{/each}}
